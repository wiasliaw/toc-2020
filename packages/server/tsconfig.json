{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES3",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "typeRoots": ["../node_modules/@types"],
    "types": ["node"],

    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,

    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
